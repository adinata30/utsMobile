<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect"
    android:layout_marginVertical="20dp"
    >
    <TextView
        android:textColor="@color/brown"
        android:id="@+id/tid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price : "
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/restaurant_text"
        android:text="Restaurant : "
        android:textSize="16sp"
        android:layout_below="@id/tid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/transaction_date_text"
        android:text="Transaction Date : "
        android:textSize="16sp"
        android:layout_below="@id/restaurant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delivery_address"
        android:text="Delivery Address : "
        android:textSize="16sp"
        android:layout_below="@id/transaction_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/view_details_btn"
        android:textColor="@color/brown"
        android:text="View Details"

        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>