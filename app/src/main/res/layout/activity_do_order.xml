<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoOrderActivity"
    android:background="@mipmap/bg_foreground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@id/my_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="@string/my_order"
            android:textAllCaps="false"
            android:onClick="gotoMyOrderPage"
            />
        <TextView
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/current_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>
        <EditText
            android:width="100dp"
            android:layout_marginTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_qty"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_toEndOf="@id/current_name"
            />
        <TextView
            android:layout_below="@id/current_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/current_price"
            android:layout_width="200dp"
            android:textSize="24sp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_qty"
            android:layout_marginStart="3dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@id/current_price"
            android:onClick="goBack"
            android:text="@string/order_more"
            android:textAllCaps="false" />
    </RelativeLayout>

</ScrollView>