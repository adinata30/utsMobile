<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/bg_foreground"
    >
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bal : "
            />
        <TextView
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/balance_text"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            />
        <Button
            android:id="@+id/my_transaction_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAllCaps="false"
            android:onClick="goToHistoryPage"
            />
        <Button
            android:id="@+id/my_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_order"
            android:textAllCaps="false"
            android:onClick="gotoMyOrderPage"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/restaurant_name"
        android:textColor="@color/colorSecondary"
        android:textSize="30sp"
        android:text="Restaurant"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/drinks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="60dp"
        android:text="@string/drinks"
        android:textAllCaps="false"
        android:onClick="gotoDrinkPage"
        android:padding="20dp"
        android:textSize="30sp"
        android:background="@drawable/rect"/>

    <Button
        android:id="@+id/snacks_btn"
        android:layout_toEndOf="@id/drinks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/snacks"
        android:textAllCaps="false"
        android:onClick="gotoSnackPage"
        android:padding="20dp"
        android:textSize="30sp"
        android:background="@drawable/rect"/>

    <Button
        android:id="@+id/foods_btn"
        android:layout_below="@id/drinks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="60dp"
        android:text="@string/foods"
        android:textAllCaps="false"
        android:onClick="gotoFoodPage"
        android:padding="20dp"
        android:textSize="30sp"
        android:background="@drawable/rect"/>

    <Button
        android:id="@+id/topUp_btn"
        android:layout_toEndOf="@id/foods_btn"
        android:layout_below="@id/snacks_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/top_ups"
        android:textAllCaps="false"
        android:onClick="gotoTopUpPage"
        android:padding="20dp"
        android:textSize="30sp"
        android:background="@drawable/rect"/>



</RelativeLayout>